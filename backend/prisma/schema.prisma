datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id               String   @id @default(cuid())
  pin              String   @unique 
  passwordHash     String
  role             String   @default("USER")
  firstLoginDone   Boolean  @default(false)

  baseUrl          String?
  xRoadInstance    String?
  xRoadMemberClass String?
  xRoadMemberCode  String?
  xRoadSubsystem   String?

  certificate      UserCertificate?
  permissions      UserPermissions?
  servicePermissions UserServicePermission[]

  providers        Provider[]
  servicesOwned    Service[]    // ðŸ‘ˆ inversa de Service.user
  endpointsOwned   Endpoint[]   // ðŸ‘ˆ inversa de Endpoint.user

  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  UploadedFile     UploadedFile[]
  actionLog        ActionLog[]
}

model UserCertificate {
  id            String   @id @default(cuid())
  userId        String   @unique
  p12Encrypted  Bytes
  iv            Bytes
  authTag       Bytes
  fingerprint   String
  subject       String
  notBefore     DateTime
  notAfter      DateTime
  passEncrypted Bytes
  passIv        Bytes
  passAuthTag   Bytes
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  user          User     @relation(fields: [userId], references: [id])
}

model UserPermissions {
  id               String   @id @default(cuid())
  userId           String   @unique
  canViewProviders Boolean  @default(true)
  canViewServices  Boolean  @default(true)
  canViewFiles     Boolean  @default(true)
  canDownloadFiles Boolean  @default(true)
  user             User     @relation(fields: [userId], references: [id])
}

model Provider {
  id            String   @id @default(cuid())
  userId        String?  // opcional
  routeVersion  String
  xRoadInstance String
  memberClass   String
  memberCode    String
  subsystemCode String?
  displayName   String
  hasServices   Boolean  @default(false)

  services      Service[]
  user          User?    @relation(fields: [userId], references: [id])
  servicePermissions UserServicePermission[]

  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  @@unique([routeVersion, xRoadInstance, memberClass, memberCode, subsystemCode])
}

model Service {
  id             String   @id @default(cuid())
  userId         String?  // opcional
  providerId     String
  serviceCode    String
  serviceVersion String?
  serviceType    String?

  provider       Provider @relation(fields: [providerId], references: [id])
  endpoints      Endpoint[]
  servicePermissions UserServicePermission[]

  user           User?    @relation(fields: [userId], references: [id]) // <-- inversa en User.servicesOwned

  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  @@unique([providerId, serviceCode])
}

model Endpoint {
  id        String   @id @default(cuid())
  userId    String?  // opcional
  serviceId String
  method    String
  path      String

  service   Service  @relation(fields: [serviceId], references: [id])
  user      User?    @relation(fields: [userId], references: [id]) // <-- inversa en User.endpointsOwned

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([serviceId, method, path])
}

model UploadedFile {
  id         String   @id @default(cuid())
  userId     String
  filename   String
  mimetype   String
  size       Int
  path       String
  createdAt  DateTime @default(now())
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ActionLog {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  action    String
  detail    String?
  createdAt DateTime @default(now())
  hidden    Boolean  @default(false)
}

model UserServicePermission {
  id          String   @id @default(cuid())
  userId      String
  providerId  String?
  serviceId   String?
  canView     Boolean  @default(false)
  canDownload Boolean  @default(false)

  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  provider    Provider? @relation(fields: [providerId], references: [id])
  service     Service?  @relation(fields: [serviceId], references: [id])

  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([providerId])
  @@index([serviceId])
}

